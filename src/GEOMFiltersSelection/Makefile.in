# header files 
EXPORT_HEADERS= GEOM_ShapeTypeFilter.hxx \
		Handle_GEOM_ShapeTypeFilter.hxx \
	        GEOM_FaceFilter.hxx \
	        Handle_GEOM_FaceFilter.hxx \
	        GEOM_EdgeFilter.hxx \
	        Handle_GEOM_EdgeFilter.hxx

